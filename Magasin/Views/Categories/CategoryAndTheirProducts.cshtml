@model List<Magasin.Models.Product>

@{
    ViewData["Title"] = "CategoryAndTheirProducts";
}

<h1>Products with Their Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Description</td>
                <td>@product.Category.Name</td>
            </tr>
        }
    </tbody>
</table>
