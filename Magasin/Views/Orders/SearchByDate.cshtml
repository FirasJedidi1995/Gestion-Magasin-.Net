@model IEnumerable<Magasin.Models.Order>

@{
    ViewData["Title"] = "SearchByDate";
}

<h1>SearchByDate</h1>
<h2>Orders on Selected Date</h2>

@using (Html.BeginForm("SearchByDate", "Orders", FormMethod.Get))
{
    <p>
        Select Date: <input type="date" name="selectedDate" />
        <input type="submit" value="Search" />
    </p>
}
<p>
    
</p> 
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products.ProductId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} 
else
{
    <p>No orders found for the selected date.</p>
}

