@model List<Magasin.Models.Product>

<h1>Produits de la Catégorie</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Description</th>
            <!-- Ajoutez d'autres colonnes si nécessaire -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Description</td>
                <!-- Ajoutez d'autres colonnes si nécessaire -->
            </tr>
        }
    </tbody>
</table>
